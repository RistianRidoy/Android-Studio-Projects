<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="30dp"
    tools:context=".ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/forget_password_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="callBackScreenFromForgetPassword"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            tools:ignore="OnClick" />


        <ImageView
            android:id="@+id/forget_password_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/travel_guide" />


        <TextView
            android:id="@+id/forget_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/black_han_sans"
            android:includeFontPadding="false"
            android:text="Please Make a\nSelection"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/forget_password_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chau_philomene_one"
            android:text="Please provide your account details,
            where we sent you OTP"
            android:textColor="@color/Ghostash"
            android:textSize="20sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="@color/GhostWhite"
            android:padding="10dp">


            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/mobile_icon" />

            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/mobile_icon"
                android:fontFamily="@font/chau_philomene_one"
                android:text="Via SMS"
                android:textColor="@color/Ghostash"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/mobile_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile_title"
                android:layout_toRightOf="@id/mobile_icon"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/chau_philomene_one"
                android:text="+1234567890"
                android:textColor="@color/black"
                android:textSize="27sp" />

            <Button
                android:id="@+id/sms_otp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="@color/GhostWhite"
            android:padding="10dp">


            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/email_icon" />

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/email_icon"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_marginLeft="30dp"
                android:text="Via Email"
                android:textColor="@color/Ghostash"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/email_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_title"
                android:layout_toRightOf="@id/email_icon"
                android:fontFamily="@font/chau_philomene_one"
                android:layout_marginLeft="30dp"
                android:text="abdllah@gmail.com"
                android:textColor="@color/black"
                android:textSize="27sp" />

            <Button
                android:id="@+id/email_otp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000" />


        </RelativeLayout>


    </LinearLayout>
</ScrollView>